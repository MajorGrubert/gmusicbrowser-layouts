[Arkanoid 2 Fullscreen]

Author=aboettger

Type=F

SkinPath = skins/arkanoid_skin

Skin = background_black.png::s

Window  = fullscreen=1,sticky=0

KeyBindings	= Escape CloseWindow

VBMainContainer  = _HPContent -HBReplayButtons
    HBReplayButtons = Prev(size=menu) \
        Play(size=menu) \
        Next(size=menu) \
        20VSeparator \
        5_TimeBar(text="%t by %a (%m)",minwidth=240,skin=background_white.png::hs,handle_skin=paper_PosHand.png:::normal_prelight_active) \
        10-Stars

    HPContent = _HBCover
        HBCover = _Cover(click1="",reflection=1,overlay=6x6:778x778:skins/arkanoid_skin/overlay.png,default=skins/arkanoid_skin/no-cover.png,showcover=0)

